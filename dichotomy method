#include<stdio.h> //Метод Дихотомии
#include<math.h>
#include <locale.h>
float e=2.72;
float f(float x)
{
return x*pow(e,x)-1;
}
int main()
{
    setlocale(LC_ALL, "Rus");
int n = 0;
  float a=0;
  float b=1;
  float c;
  float eps = 0.0001;
  while(fabs(a-b)>=eps){
  //for(int n=1;b-a>eps;n++)
 c = (a + b) / 2;
if (f(c) * f(a) < 0)
b = c;
else
a = c;
n++;
}
printf("Корень равен : %f",c);
printf("\nКоличество итераций  = %d",n);
return 0;
}
