#include<stdio.h>
#include<math.h>
#include <locale.h>
float e=2.72;
double f(double x)
{
return x*pow(e,x)-1;
}
double proizv(double x)
{
return x*pow(e,x)+pow(e,x);
}

int main()
{
setlocale(LC_ALL, "Rus");
int n = 0;
float c;
float a=0;
float b=1;
float eps = 0.0001;
c = b-f(b)/proizv(b);
while (f(c+eps) * f(c-eps) > 0)
{
c = b-f(b)/proizv(b);
b = c;
  n++;
}
printf("%f", c);
printf("\nКоличество итераций = %d", n);
return 0;
}
